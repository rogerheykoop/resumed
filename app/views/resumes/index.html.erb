<div class="page-header">
  <%= link_to new_resume_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Resume
  <% end %>
  <h1>Listing resumes</h1>
</div>

<% if @resumes.nil? or @resumes.length == 0 %>
<div class="alert alert-warning" role="alert">No resumes present yet</div>

<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
              <th>User</th>
              <th>Resume Name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @resumes) do |resume| %>
          <td><%= resume.inspect %></td>
          <td><%= link_to 'Show', resume %></td>
          <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
          <td><%= link_to 'Destroy', resume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>